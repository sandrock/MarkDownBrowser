<Window
    x:Class="Srk.BrowseMark.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MarkDownBrowser" Height="195" Width="395">
    <Window.Resources>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--<Button Click="OnOpenButtonClicked">open</Button>
            <TextBox Grid.Column="1" />
            <Button Grid.Column="2" Click="OnGoButtonClicked">go</Button>-->
            <TextBlock Grid.ColumnSpan="3" TextWrapping="Wrap">
                <Run Text="You may find help about MarkDownBrowser on the "/>
                <Hyperlink NavigateUri="https://github.com/sandrock/MarkDownBrowser" >
                    <Run Text="github repository" />
                </Hyperlink>
                <Run Text=". " />
            </TextBlock>
        </Grid>

        <Grid Grid.Row="1" AllowDrop="True" DragOver="Grid_DragOver" Drop="Grid_Drop" DragLeave="Grid_DragLeave">
            <!--<WebBrowser x:Name="browser" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />-->
            <TextBlock Text="Drop a MD file here." HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" />
        </Grid>

        <Grid Grid.Row="2">
            <TextBlock Text="{Binding Status}" ToolTip="{Binding Status}" TextTrimming="CharacterEllipsis" />
        </Grid>
    </Grid>
</Window>
